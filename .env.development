# ===========================================
# CROWBAR MOBILE - DEVELOPMENT ENVIRONMENT
# ===========================================

NODE_ENV=development
BUILD_TYPE=development

# ===========================================
# API CONFIGURATION
# ===========================================
API_BASE_URL=http://localhost:3000/api
WS_BASE_URL=ws://localhost:3000
API_TIMEOUT=10000
API_KEY=dev-api-key

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_PROJECT_ID=crowbar-mobile-dev
FIREBASE_APP_ID=your-dev-firebase-app-id
FIREBASE_API_KEY=your-dev-firebase-api-key
FIREBASE_AUTH_DOMAIN=crowbar-mobile-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=crowbar-mobile-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-dev-sender-id

# ===========================================
# APP CONFIGURATION
# ===========================================
APP_VERSION=1.0.0-dev
DEBUG_MODE=true
ANALYTICS_ENABLED=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
FLIPPER_ENABLED=true
DEV_MENU_ENABLED=true
LOG_LEVEL=debug
