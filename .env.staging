# ===========================================
# CROWBAR MOBILE - STAGING ENVIRONMENT
# ===========================================

NODE_ENV=staging

# ===========================================
# API CONFIGURATION
# ===========================================
API_BASE_URL=https://crowbar-backend-staging.azurewebsites.net/api/v1
SOCKET_URL=https://crowbar-backend-staging.azurewebsites.net
API_TIMEOUT=15000

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_PROJECT_ID=crowbar-mobile-staging
FIREBASE_APP_ID=your-staging-firebase-app-id
FIREBASE_API_KEY=your-staging-firebase-api-key
FIREBASE_AUTH_DOMAIN=crowbar-mobile-staging.firebaseapp.com
FIREBASE_STORAGE_BUCKET=crowbar-mobile-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-staging-sender-id

# ===========================================
# APP CONFIGURATION
# ===========================================
APP_VERSION=1.0.0-staging
DEBUG_MODE=false
ANALYTICS_ENABLED=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
FLIPPER_ENABLED=false
DEV_MENU_ENABLED=false
LOG_LEVEL=info
