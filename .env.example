# ===========================================
# CROWBAR MOBILE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in your actual values

# Environment (development, staging, production)
NODE_ENV=development
BUILD_TYPE=development

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URLs (environment specific)
API_BASE_URL_DEVELOPMENT=http://localhost:3000/api
API_BASE_URL_STAGING=https://crowbar-backend-staging.azurewebsites.net/api
API_BASE_URL_PRODUCTION=https://crowbar-backend.azurewebsites.net/api

# WebSocket URLs (environment specific)
WS_BASE_URL_DEVELOPMENT=ws://localhost:3000
WS_BASE_URL_STAGING=wss://crowbar-backend-staging.azurewebsites.net
WS_BASE_URL_PRODUCTION=wss://crowbar-backend.azurewebsites.net

# API timeout em milissegundos
API_TIMEOUT=10000

# API Keys (environment specific)
API_KEY_DEVELOPMENT=dev-api-key-here
API_KEY_STAGING=staging-api-key-here
API_KEY_PRODUCTION=production-api-key-here

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Development Firebase
FIREBASE_API_KEY_DEVELOPMENT=AIzaSyDev-Key-For-Development-Only
FIREBASE_AUTH_DOMAIN_DEVELOPMENT=crowbar-dev.firebaseapp.com
FIREBASE_PROJECT_ID_DEVELOPMENT=crowbar-dev
FIREBASE_STORAGE_BUCKET_DEVELOPMENT=crowbar-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID_DEVELOPMENT=123456789
FIREBASE_APP_ID_DEVELOPMENT=1:123456789:android:dev-app-id
FIREBASE_MEASUREMENT_ID_DEVELOPMENT=G-DEV-MEASUREMENT-ID

# Staging Firebase
FIREBASE_API_KEY_STAGING=AIzaSyStaging-Key-Replace-With-Real
FIREBASE_AUTH_DOMAIN_STAGING=crowbar-staging.firebaseapp.com
FIREBASE_PROJECT_ID_STAGING=crowbar-staging
FIREBASE_STORAGE_BUCKET_STAGING=crowbar-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID_STAGING=987654321
FIREBASE_APP_ID_STAGING=1:987654321:android:staging-app-id
FIREBASE_MEASUREMENT_ID_STAGING=G-STAGING-MEASUREMENT-ID

# Production Firebase
FIREBASE_API_KEY_PRODUCTION=AIzaSyProduction-Key-Replace-With-Real
FIREBASE_AUTH_DOMAIN_PRODUCTION=crowbar-prod.firebaseapp.com
FIREBASE_PROJECT_ID_PRODUCTION=crowbar-prod
FIREBASE_STORAGE_BUCKET_PRODUCTION=crowbar-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID_PRODUCTION=111222333
FIREBASE_APP_ID_PRODUCTION=1:111222333:android:prod-app-id
FIREBASE_MEASUREMENT_ID_PRODUCTION=G-PROD-MEASUREMENT-ID

# ===========================================
# APP CONFIGURATION
# ===========================================

# App version for display
APP_VERSION=1.0.0

# Debug mode (true/false)
DEBUG_MODE=true

# Enable/disable analytics
ANALYTICS_ENABLED=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable Flipper (React Native debugger)
FLIPPER_ENABLED=true

# Enable dev menu
DEV_MENU_ENABLED=true

# Log level (debug, info, warn, error)
LOG_LEVEL=debug