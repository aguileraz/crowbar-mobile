# npm configuration for React Native
# Standard npm settings (pnpm config removed)

# Use exact versions
save-exact=true

# Legacy peer deps to avoid conflicts
legacy-peer-deps=false

# pnpm specific settings for React Native Gradle compatibility
# Hoist react-native gradle plugin for includeBuild to work
node-linker=hoisted
shamefully-hoist=true
public-hoist-pattern[]=@react-native/*
