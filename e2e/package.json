{
  "name": "crowbar-mobile-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Crowbar Mobile app",
  "scripts": {
    "test": "wdio run ./config/wdio.conf.js",
    "test:android": "wdio run ./config/wdio.conf.js",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 ./node_modules/.bin/wdio run ./config/wdio.conf.js",
    "report": "allure generate test-results/allure-results -o test-results/allure-report --clean && allure open test-results/allure-report"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@wdio/allure-reporter": "^8.0.0",
    "@wdio/appium-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/junit-reporter": "^8.0.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "allure-commandline": "^2.24.0",
    "appium": "^2.0.0",
    "appium-uiautomator2-driver": "^2.29.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "wdio-wait-for": "^3.0.0"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "dotenv": "^16.0.3"
  }
}