# Crowbar Mobile - Android Gradle Properties
# Copy this file to gradle.properties and fill in your values

# Project-wide Gradle settings.
org.gradle.jvmargs=-Xmx2048m -Dfile.encoding=UTF-8
android.useAndroidX=true
android.enableJetifier=true

# Version of flipper SDK to use with React Native
FLIPPER_VERSION=0.182.0

# Use this property to specify which architecture you want to build.
# You can also override it from the CLI using
# ./gradlew <task> -PreactNativeArchitectures=x86_64
reactNativeArchitectures=armeabi-v7a,arm64-v8a,x86,x86_64

# Use this property to enable support to the new architecture.
# This will allow you to use TurboModules and the Fabric render in
# release mode. You should enable this flag either if you want
# to write custom TurboModules/Fabric components OR use libraries that
# are providing them.
newArchEnabled=false

# Enable Hermes on Android (default is true)
hermesEnabled=true

# Enable Proguard in release builds
android.enableR8.fullMode=true

# Signing configuration for release builds
# IMPORTANT: Do not commit these values to version control
# Set them as environment variables or in a local gradle.properties file

# Keystore file (relative to android/app directory)
MYAPP_UPLOAD_STORE_FILE=release.keystore

# Keystore password
MYAPP_UPLOAD_STORE_PASSWORD=your_keystore_password

# Key alias
MYAPP_UPLOAD_KEY_ALIAS=your_key_alias

# Key password
MYAPP_UPLOAD_KEY_PASSWORD=your_key_password

# Build optimization
org.gradle.parallel=true
org.gradle.configureondemand=true
org.gradle.daemon=true
org.gradle.caching=true

# Android build cache
android.enableBuildCache=true

# Incremental annotation processing
kapt.incremental.apt=true

# Use legacy packaging for APK
android.bundle.enableUncompressedNativeLibs=false

# Enable R8 code shrinking
android.enableR8=true

# Enable resource shrinking
android.enableResourceOptimizations=true

# Bundle configuration
# Generate separate APKs for each architecture
android.bundle.enableUncompressedNativeLibs=false

# Proguard configuration
android.enableProguardInReleaseBuilds=true

# Flipper configuration (disable in release)
FLIPPER_ENABLED=false

# React Native configuration
REACT_NATIVE_UNSTABLE_USE_RUNTIME_SCHEDULER_ALWAYS=true

# Memory settings for large projects
org.gradle.jvmargs=-Xmx4g -XX:MaxMetaspaceSize=512m -XX:+HeapDumpOnOutOfMemoryError

# Network timeout settings
systemProp.org.gradle.internal.http.connectionTimeout=120000
systemProp.org.gradle.internal.http.socketTimeout=120000

# Build performance
org.gradle.workers.max=4

# Android Gradle Plugin settings
android.defaults.buildfeatures.buildconfig=true
android.defaults.buildfeatures.aidl=true
android.defaults.buildfeatures.renderscript=true
android.defaults.buildfeatures.resvalues=true
android.defaults.buildfeatures.shaders=true

# Kotlin settings
kotlin.code.style=official
kotlin.incremental=true
kotlin.incremental.android=true
kotlin.incremental.java=true

# Experimental features
android.experimental.enableArtProfiles=true
android.experimental.r8.dex-startup-optimization=true

# Security settings
android.injected.signing.store.file=
android.injected.signing.store.password=
android.injected.signing.key.alias=
android.injected.signing.key.password=
